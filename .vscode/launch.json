{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceRoot}/cmd/api/main.go",
            "env": {},
            "args": [],
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "Migrate",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceRoot}/cmd/migration/main.go",
            "env": {},
            "args": [],
            "cwd": "${workspaceRoot}/cmd/migration/"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug Client",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/assets/app/src",
            "breakOnLoad": false,
            "sourceMapPathOverrides": {
              "webpack:///src/*": "${webRoot}/*"
            },
            "preLaunchTask": "Client Serve",
            "postDebugTask": "Terminate All Tasks",
            "trace": "verbose"
          },
    ],
    "compounds": [
      {
        "name": "Debug Server/Client",
        "configurations": ["Debug Server", "Debug Client"]
      }
    ]
}